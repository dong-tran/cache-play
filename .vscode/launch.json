{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/go/main.go"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Front: chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/nuxt"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Front: server",
      "outputCapture": "std",
      "program": "${workspaceFolder}/nuxt/node_modules/nuxi/bin/nuxi.mjs",
      "args": [
        "dev"
      ],
    }
  ]
}